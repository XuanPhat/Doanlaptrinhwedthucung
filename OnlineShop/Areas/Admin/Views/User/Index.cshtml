@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sach";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách người dùng
}

@section jsFooter{
    <script src="/assets/admin/js/controller/userController.js"></script>
}

<body id="page-top">

    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bảng người dùng</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    @using (Html.BeginForm("Index", "User", FormMethod.Get))

                    {

                        <div class="row form-group">
                            <div style="display:flex;margin-bottom:20px" class="col-lg-12">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString" name="SearchString" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                    <a class="btn btn-primary" href="/Admin/User/Create">Thêm người dùng</a>
                                </div>
                            </div>

                        </div>
                    }

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">



                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Username</th>
                                <th>Name</th>
                                <th>Email</th>

                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.Username</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
}


                        </tbody>
                    </table>


                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, SearchString = @ViewBag.SearchString }))









                </div>

            </div>

        </div>
    </div>




</body>








